{
  "compilerOptions": {
    "target": "es5",//compiler target currently browser supports 5 only
    "module": "commonjs",//module loader
    "moduleResolution": "node",// process followed to load the Import modules- node or classic
    "sourceMap": true,// if typescript should generate the map file.Map file are used in debugging
    "emitDecoratorMetadata": true,//Attributes /Decorators
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,//if all the variables should be strongly typed.
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}

